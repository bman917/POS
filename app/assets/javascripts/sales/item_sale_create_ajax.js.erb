<% url = POS::Application.routes.url_helpers %>

function bind_enter_keyboard_listener() {
    Mousetrap.bind('enter', function(e) {
        item_sale_create_ajax();
    });
}

function item_sale_create_ajax() {
    $.ajax({
        url: '<%=url.item_sales_path%>',
        type: "POST",
         data: {
           'item_sale[item_id]' : $(item_id_css).val(), 
           'item_sale[qty]'     : $(item_qty_css).val(),
           'item_sale[sale_id]' : $(sales_id_css).val(),
           'item_sale[price]'   : $(item_price_css).val()
        }
    });
}