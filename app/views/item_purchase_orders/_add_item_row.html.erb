<tr id='add_item'>
  <%=form_tag item_purchase_orders_path do %>
  <td>
    <%=text_field_tag :item_name, [], 
        placeholder: "Enter item name or item code...",  
        autofocus: true, 
        class: 'text'%>
    <%=hidden_field_tag 'item_purchase_order[item_id]'%>
  </td>
  <td>
    <%=text_field_tag 'item_purchase_order[quantity]', [], style: 'width: 4em'%>
  </td>
  <%end%>
</tr>