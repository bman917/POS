<div>
<h2 class="titleize">Edit User</h2>


<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :username %><br>
      <%= @user.username %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email%>
    </div>


    <div class="field">
      <%= f.label :role %><br>
      <%unless @user.root_admin? %>
        <%= f.select :role, ['Admin','Moderator','Viewer'] %>
      <% else %>
        <%= f.label :role, @user.role %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :status %><br>
      <%unless @user.root_admin? %>
        <%= f.select :status, ['Active','Disabled'] %>
      <% else %>
        <%= f.label :status, @user.status %>
      <% end %>
    </div>



    <div class="actions">
      <%= f.submit %>
    </div>


<% end %>
</div>