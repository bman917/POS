<table id="item_selector">
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
    </tr>
  </thead>

  <tbody>

  </tbody>
</table>

<%=javascript_tag do %>
  $(document).ready( function () {

  columns = [{"data": "name"},{"data": "unit"}];

  $('#item_selector').dataTable( {
      "paging": false,
      "pagingType": "full_numbers",
      "jQueryUI": false,
      "processing": true,
      "serverSide": true,
      "ajax": {"url": "<%=json_items_path%>", "type": "POST"},
      "columns": columns,
      "deferLoading": true
  } );

} );

<% end %>

