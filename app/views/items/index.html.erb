<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th style="min-width: 25em">Name</th>
      <th>Supplier</th>
      <th>Description</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr id="<%=css_id(item)%>">
        <td><%= item.name %></td>
        <td><%= item.supplier.try(:name) %></td>
        <td><%= item.description %></td>
        <td><%= item.unit %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to edit_img, edit_item_path(item) %></td>
        <td><%= link_to delete_img, item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'button' %>
