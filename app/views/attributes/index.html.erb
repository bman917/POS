<h1>Item Attributes</h1>
<div class="row">
  <div class="columns small-7">
<table id="attribute">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attributes.each do |attribute| %>
      <tr id="<%="attribute_#{attribute.id}"%>" class="<%='highlight' if attribute.id == @attribute.try(:id)%>">
        <td><%= attribute.name %></td>
        <td><%= link_to edit_img, edit_attribute_path(attribute),
                    data: {:"reveal-ajax" => true, :"reveal-id" => "modal_form", remote: false}%></td>
        <td><%= link_to delete_img, attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<div class="row">
  <div class="columns small-7">

<%= link_to 'New Attribute', new_attribute_path,
      data: {:"reveal-ajax" => true, :"reveal-id" => "modal_form"},
      class: 'button' %>
  </div>
</div>