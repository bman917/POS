<div>

<%= simple_form_for(@supplier, url: @modified_url, remote: @remote) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Save', class: 'expand' %>
  </div>
<% end %>

</div>

<%=javascript_tag do %>
  unbind_open_supplier_form();
  bind_focus_on_supplier_form_open();
<% end %>