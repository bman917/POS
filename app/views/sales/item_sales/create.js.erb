$('tr#new').after("<%=j render partial: 'sales/item_sale', object: @item_sale%>");
$('tr').removeClass('newly_added');
$('#<%=@item_sale.css_id%>').addClass('newly_added');

$('#item_id').val('');
$('input').removeClass('ready_to_save');
$('#item_name').val('');
$('#item_name').focus();

$('#sale_total').text('<%=number_to_currency @sale.total, unit: ''%>');
$('#number_of_items').text('<%=@sale.item_sales.count%>');

$('#sales_right_panel #summary_vertical .content').remove();
$('#sales_right_panel #summary_vertical').append("<%=j render 'sales/form_summary'%>");