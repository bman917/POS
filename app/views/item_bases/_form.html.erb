<%= simple_form_for(@item_base, url: @modified_url, remote: @remote) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Save', class: 'expand' %>
  </div>
<% end %>

<%=javascript_tag do %>

setTimeout(function() {
   $('#item_base_name').focus();   
  }, 250);
  
<% end %>
