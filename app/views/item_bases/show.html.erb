<table id="item_base_show_attrib" >
  <thead>
    <tr>
      <%gen_table(@item_base)[:header].sort_by {|attrib, index| index}.each do | name, index | %>
            <th style="width:40px"><%=name%></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%gen_table(@item_base)[:rows].each do | columns  | %>
    <tr style="vertical-align: top;">
        <% columns.each do | col_index, value | %>
          <% if col_index == 1 %>
            <td><%=value%></td>
          <% else %>
            <td>
              <ul>
              <% value.each do | v | %>
                <li><%=v%></li>
              <% end if value %>
              </ul>
            </td>
          <% end %>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

